{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "core/interfaces/*"
      ]
    },
    "lib": [
      "esnext", "dom"
    ]
  }
}
